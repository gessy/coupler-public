<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="4dp"
    android:paddingStart="15dp"
    android:paddingEnd="60dp"
    android:clipToPadding="false">

    <View
        android:id="@+id/avatar"
        android:layout_alignParentStart="true"
        android:scaleType="centerInside"
        android:background="@drawable/circle"
        android:layout_width="34dp"
        android:layout_height="34dp" />

    <TextView
        android:id="@+id/user_full_name"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/avatar"
        android:layout_alignTop="@+id/avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:text="Rose"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/message_body"
        android:layout_below="@+id/user_full_name"
        android:layout_alignStart="@+id/user_full_name"
        android:background="@drawable/income_bubble"
        android:paddingVertical="10dp"
        android:paddingHorizontal="16dp"
        android:textAppearance="?attr/textAppearanceListItem"
        android:elevation="2dp"
        android:textSize="@dimen/message_body_text_size"
        android:text="How are you doing? This is a long message that should probably wrap."
        />

</RelativeLayout>